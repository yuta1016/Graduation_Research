<!-- ################################################ -->
<!-- Definition of the root wrapper                   -->
<!-- ################################################ -->
<!ELEMENT Mpeg7Main (AudioVisualDescription)>
<!ATTLIST Mpeg7Main
	id ID #IMPLIED
	version CDATA #IMPLIED
>
<!-- ################################################ -->
<!-- Definition of the top-level element              -->
<!-- ################################################ -->
<!ELEMENT AudioVisualDescription (AudioVisual)>
<!-- ################################################ -->
<!-- Definition of the Audio-Visual Content Entity    -->
<!-- ################################################ -->
<!ELEMENT AudioVisual (SegmentDecomposition*, MediaTime)>
<!ATTLIST AudioVisual
	id ID #REQUIRED
	href CDATA #IMPLIED
	idref CDATA #IMPLIED
>
<!-- ################################################ -->
<!-- Definition of the AudioVisualSegment DS          -->
<!-- ################################################ -->
<!ELEMENT AudioVisualSegment (PointOfView*, MediaTime)>
<!ATTLIST AudioVisualSegment
	id ID #REQUIRED
	href CDATA #IMPLIED
	idref CDATA #IMPLIED
>
<!-- ################################################ -->
<!-- Definition of the SegmentDecomposition DS        -->
<!-- ################################################ -->
<!-- Definition of datatype of the decomposition      -->
<!ENTITY % DecompositionDataTypes "(spatial|temporal|spatio-temporal|MediaSource)">
<!-- Definition of the decomposition                  -->
<!ELEMENT SegmentDecomposition (AudioVisualSegment+)>
<!ATTLIST SegmentDecomposition
	DecompositionType %DecompositionDataTypes; #REQUIRED
	Overlap (true | false) "false"
	Gap (true | false) "false"
>
<!-- ############################################## -->
<!--  Definition of the PointOfView DS              -->
<!-- ############################################## -->
<!-- definition of Value D -->
<!ELEMENT Value (#PCDATA)>
<!ATTLIST Value
	id ID #IMPLIED
>
<!-- main definition of the PointOfView DS -->
<!ELEMENT PointOfView (SupplementalInfo?, Value+)>
<!ATTLIST PointOfView
	id ID #IMPLIED
	viewPoint CDATA #REQUIRED
>
<!-- ################################################ -->
<!--  Definition of the SupplementalInfo DS           -->
<!-- ################################################ -->
<!ELEMENT SupplementalInfo ((FreeTextAnnotation | StructuredAnnotation)+)>
<!-- Definition of the FreeTextAnnotation DS -->
<!ELEMENT FreeTextAnnotation (#PCDATA)>
<!ATTLIST FreeTextAnnotation
	xml:lang CDATA #IMPLIED
>
<!-- Definition of the StructuredAnnotation DS -->
<!ELEMENT StructuredAnnotation (Who? | WhatObject? | WhatAction? | Where? | When? | Why?)*>
<!ELEMENT Who (#PCDATA)>
<!ELEMENT WhatObject (#PCDATA)>
<!ELEMENT WhatAction (#PCDATA)>
<!ELEMENT Where (#PCDATA)>
<!ELEMENT When (#PCDATA)>
<!ELEMENT Why (#PCDATA)>
<!ATTLIST StructuredAnnotation
	id ID #IMPLIED
	xml:lang CDATA #IMPLIED
>
<!-- ################################################ -->
<!-- Definition of the MediaTime DS                   -->
<!-- ################################################ -->
<!ELEMENT MediaTime (MediaTimePoint, MediaDuration)>
<!-- ################################################ -->
<!--   Definition of the MediaTimePoint D             -->
<!-- ################################################ -->
<!ELEMENT MediaTimePoint (#PCDATA)>
<!-- ################################################ -->
<!--   Definition of the the MediaDuration D          -->
<!-- ################################################ -->
<!ELEMENT MediaDuration (#PCDATA)>
