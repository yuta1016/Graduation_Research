<!-- ################################################ -->
<!-- Definition of the root wrapper(dummy)            -->
<!-- ################################################ -->
<!ELEMENT GenericAV (VideoSegment*)>
<!ATTLIST GenericAV
	id ID #REQUIRED
	name CDATA #REQUIRED
>
<!-- ################################################ -->
<!-- Definition of the VideoSegment DS                -->
<!-- ################################################ -->
<!ELEMENT VideoSegment (PointOfView*, SegmentDecomposition*, MediaTime)>
<!ATTLIST VideoSegment
	id ID #REQUIRED
	href CDATA #IMPLIED
	idref CDATA #IMPLIED
>
<!-- ################################################ -->
<!-- Definition of the SegmentDecomposition DS        -->
<!-- ################################################ -->
<!-- Definition of datatype of the decomposition      -->
<!ENTITY % DecompositionDataTypes "(spatial|temporal|spatio-temporal|MediaSource)">
<!-- Definition of the decomposition                  -->
<!ELEMENT SegmentDecomposition (VideoSegment+)>
<!ATTLIST SegmentDecomposition
	DecompositionType %DecompositionDataTypes; #REQUIRED
	Overlap (true | false) "false"
	Gap (true | false) "false"
>
<!-- ############################################## -->
<!--  Definition of the PointOfView DS              -->
<!-- ############################################## -->
<!-- definition of Value D -->
<!ELEMENT Value (#PCDATA)>
<!ATTLIST Value
	id ID #IMPLIED
>
<!-- main definition of the PointOfView DS -->
<!ELEMENT PointOfView (Info?, Value+)>
<!ATTLIST PointOfView
	id ID #IMPLIED
	ViewPoint CDATA #REQUIRED
>
<!-- ##################################### -->
<!--  Definition of the Info DS            -->
<!-- ##################################### -->
<!ELEMENT Info (Who? | WhatObject? | WhatAction? | Where? | When? | Why? | TextAnnotation?)*>
<!ELEMENT Who (#PCDATA)>
<!ELEMENT WhatObject (#PCDATA)>
<!ELEMENT WhatAction (#PCDATA)>
<!ELEMENT Where (#PCDATA)>
<!ELEMENT When (#PCDATA)>
<!ELEMENT Why (#PCDATA)>
<!ELEMENT TextAnnotation (#PCDATA)>
<!ATTLIST Info
	id ID #IMPLIED
	lang CDATA #IMPLIED
>
<!-- ################################################ -->
<!-- Definition of the MediaTime DS                   -->
<!-- ################################################ -->
<!ELEMENT MediaTime ((MediaTimePoint | MediaRelTimePoint | MediaRelIncrTimePoint), (MediaDuration | MediaIncrDuration))>
<!-- ################################################ -->
<!--   Definition of the MediaTimePoint D             -->
<!-- ################################################ -->
<!ELEMENT MediaTimePoint (#PCDATA)>
<!-- ################################################ -->
<!--   Definition of the MediaRelTimePoint D          -->
<!-- ################################################ -->
<!ELEMENT MediaRelTimePoint (#PCDATA)>
<!ATTLIST MediaRelTimePoint
	TimeBase CDATA #IMPLIED
>
<!-- ################################################ -->
<!--   Definition of the MediaRelIncrTimePoint D      -->
<!-- ################################################ -->
<!ELEMENT MediaRelIncrTimePoint (#PCDATA)>
<!ATTLIST MediaRelIncrTimePoint
	timeunit CDATA #IMPLIED
	TimeBase CDATA #IMPLIED
>
<!-- ################################################ -->
<!--   Definition of the the MediaDuration D          -->
<!-- ################################################ -->
<!ELEMENT MediaDuration (#PCDATA)>
<!-- ################################################ -->
<!--   Definition of the MediaIncrDuration D          -->
<!-- ################################################ -->
<!ELEMENT MediaIncrDuration (#PCDATA)>
<!ATTLIST MediaIncrDuration
	timeunit CDATA #IMPLIED
>
