//----------------------------------------------------------------------------
unsigned long ColorExtractionTool::ExtractFeature(Descriptor* aDesc, I_ExtractionInterfaceABC::ExtractionResult& aResult)
{
	if (strcmp(aDesc->GetName(),"Histogram Descriptor") == 0)
	{
		ColorHistogramDescriptor * myDesc = (ColorHistogramDescriptor *)aDesc;

		myDesc->SetHistogramSize(1+rand()%256);
		int i;
		for (i=1; i<= myDesc->GetHistogramSize(); i++) {
			myDesc->SetElement(i, rand()%256);
		}
		myDesc->SetNormalizationFactor(256);
		return 0;
	}
	
	return -1;
}
	
